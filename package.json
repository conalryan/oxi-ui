{
  "name": "oxi-ui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build:affected": "turbo run build --affected",
    "build:core": "turbo build --filter=@oxi-ui/core",
    "build:theme": "turbo build --filter=@oxi-ui/theme",
    "build:web-components": "turbo build --filter=@oxi-ui/web-components",
    "build": "turbo build",
    "changeset": "changeset",
    "clean": "turbo clean",
    "format:check": "oxfmt --check && turbo run format:check",
    "format": "oxfmt && turbo run format",
    "lint:affected": "turbo run lint --affected",
    "lint:fix": "oxlint . --fix && turbo run lint:fix",
    "lint": "oxlint . && turbo run lint",
    "prepare": "node scripts/install-git-hooks.cjs",
    "publish-packages": "changeset publish",
    "release": "changeset version && turbo build && changeset publish",
    "test:affected": "turbo run test --affected",
    "test:core": "turbo test --filter=@oxi-ui/core",
    "test:coverage": "turbo test:coverage",
    "test:web-components": "turbo test --filter=@oxi-ui/web-components",
    "test": "turbo test",
    "typecheck:affected": "turbo run typecheck --affected",
    "typecheck": "turbo typecheck",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "^1.1.0",
    "oxfmt": "0.34.0",
    "oxlint": "^0.9.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.1.0"
}
