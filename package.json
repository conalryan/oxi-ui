{
  "name": "oxi-ui-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo",
    "build:core": "turbo build --filter=@oxi-ui/core",
    "build:theme": "turbo build --filter=@oxi-ui/theme",
    "build:web-components": "turbo build --filter=@oxi-ui/web-components",
    "clean": "turbo clean",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "lint": "turbo lint",
    "publish:all": "turbo build && bun run --filter '*' publish",
    "test": "turbo test",
    "test:core": "turbo test --filter=@oxi-ui/core",
    "test:coverage": "turbo test:coverage",
    "test:web-components": "turbo test --filter=@oxi-ui/web-components",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "oxfmt": "0.34.0",
    "oxlint": "^0.9.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.1.0"
}
